<!DOCTYPE html>
<html lang="en">

    <!-- HEAD -->
    <%- include('../partials/head') %>

<body>
    <!-- HEADER -->
    <%- include('../partials/header') %>
        <main>
            <!-- curso detail -->
            <div class="container cursos-wrapper">
                <div class="row">
                    <div class="col-12">
                        <h2 class="cursos-title">Detalle del curso: <%= curso.titulo %>
                        </h2>
                    </div>
                </div>
                <div class="curso-detail">
                    <div class="img-box">
                        <img src="/images/<%= curso.img %> ">
                        <p class="curso-detail-description">
                            <%= curso.descripcionClase %>
                                <%= curso.descripcionDocentes %>
                        </p>
                    </div>
                    <div class="curso-info-box">
                        <article class="curso-detail-info">
                            <h2 class="curso-detail-title">
                                <%= curso.titulo %>
                            </h2>

                            <p class="curso-detail-price">
                                $<%= curso.precio %>
                            </p>

                            <button class="btn btn-small addToCart" data-curso-id="3">
                                <i class="fas fa-cart-plus"></i>Add to cart
                            </button>

                            <!-- <a href="/products/edit/%=//sala.id //% " class="action-button edit">EDITAR PRODUCTO</a> -->
                            <form action="/products/delete/<%= curso.id %>?_method=DELETE" method="POST"
                                style="display: inline-flex">
                                <button type="submit" class="action-button delete">ELIMINAR</button>
                            </form>
                        </article>
                    </div>
                </div>
            </div>
            <!-- /sala detail -->
        </main>
        <!-- FOOTER -->
        <%- include('../partials/footer') %>
</body>

</html>