<!DOCTYPE html>
<html lang="en">

<!-- HEAD -->
<%- include('../partials/head') %>

    <body>
        <!-- HEADER -->
        <%- include('../partials/header') %>
            <main>
                <!-- sala detail -->
                <div class="container salas-wrapper">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="salas-title">Detalle de la sala: <%= sala.titulo %>
                            </h2>
                        </div>
                    </div>
                    <div class="sala-detail">
                        <div class="img-box">
                            <img src="/images/<%= sala.images %> ">
                            <p class="sala-detail-description">
                                <%= sala.metros_cuadrados %>
                                    <%= sala.descripcion %>
                            </p>
                        </div>
                        <div class="sala-info-box">
                            <article class="sala-detail-info">
                                <h2 class="sala-detail-title">
                                    <%= sala.titulo %>
                                </h2>

                                <p class="sala-detail-price">
                                    $<%= sala.precio %>
                                </p>

                                <div class="button-container">
                                    <% if (locals.userLogged && userLogged.users_categories_id==2 || !locals.userLogged)
                                        { %>
                                        <button class="botonBuy">Agregar al carrito</button>
                                        <% }else{ %>
                                            <a href="/admin/editarSala/ <%= sala.id %> "
                                                class="action-button edit">EDITAR</a>
                                            <% } %>
                                </div>
                            </article>
                        </div>
                    </div>
                </div>
                <!-- /sala detail -->
            </main>
            <!-- FOOTER -->
            <%- include('../partials/footer') %>
    </body>

</html>