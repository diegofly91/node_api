<!DOCTYPE html>
<html lang="en">

    <!-- HEAD -->
    <%- include('../partials/head') %>

<body>
    <%- include('../partials/header') %>
        <main>
            <h3>Salas</h3>
            <section class="main-section">
                <div class="sala-container">
                    <div class="salas">
                        <% salas.forEach(sala=> { %>
                            <div class="sala-under">
                                <figure class="sala-image">
                                    <img src="/images/<%= sala.images %>" />
                                    <div class="sala-over">
                                        <a href="/salas/<%= sala.id %>"></a>
                                    </div>
                                </figure>
                                <div class="sala-summary">
                                    <h4>
                                        <%= sala.titulo %>
                                    </h4>
                                    <p>
                                        <%= sala.descripcion %>
                                    </p>
                                    <h6 class="price">
                                        $<span class="priceValue">
                                            <%= sala.precio %>
                                        </span>
                                    </h6>
                                    <button class="btn btn-small addToCart" data-sala-id="3">
                                        <i class="fas fa-cart-plus"></i>Add to cart
                                    </button>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                </div>
            </section>
        </main>

        <%- include('../partials/footer') %>

</body>

</html>