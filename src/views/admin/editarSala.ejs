<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>
            <main>
                <div class="form-container" id="sala-edit">
                    <h2>Editar Sala</h2>
                    <form action="/salas/editarSala/<%= sala.id %>" id="editarSala" method="POST">
                        <div>
                            <label for="">Título</label>
                            <input type="text" name="titulo" id="titulo" value="<%= sala.titulo %> ">
                            <div class="titulo-errors">
                                <% if (locals.errors && titulo.errors) { %>
                                    <h4 class="error">
                                        <%= errors.titulo.msg %>
                                    </h4>
                                    <% } %>
                            </div>
                        </div>
                        <div>
                            <label for="">Tamaño</label>
                            <input type="text" name="metros_cuadrados" id="metros_cuadrados"
                                value="<%= sala.metros_cuadrados %> ">
                            <div class="tamaño-errors">
                                <% if (locals.errors && tamaño.errors) { %>
                                    <h4 class="error">
                                        <%= errors.tamaño.msg %>
                                    </h4>
                                    <% } %>
                            </div>
                        </div>
                        <div>
                            <label for="">Turno</label>
                            <input type="text" name="turno_sala" id="turno_sala" value="<%= sala.turno_sala %> ">
                            <div class="turno-errors">
                                <% if (locals.errors && turno.errors) { %>
                                    <h4 class="error">
                                        <%= errors.turno.msg %>
                                    </h4>
                                    <% } %>
                            </div>
                        </div>
                        <div>
                            <label for="">Precio</label>
                            <input type="text" name="precio" id="precio" value="<%= sala.precio %> ">
                            <div class="precio-sala-errors">
                                <% if (locals.errors && precio.errors) { %>
                                    <h4 class="error">
                                        <%= errors.precio.msg %>
                                    </h4>
                                    <% } %>
                            </div>
                        </div>
                        <div>
                            <label for="">Imagen</label>
                            <input type="file" name="images" id="images" value="<%= sala.images %> ">
                            <p class="allowed-formats">
                                JPG,JPEG,PNG,GIF
                            </p>
                            <div class="img-sala-errors">
                                <% if (locals.errors && imagen.errors) { %>
                                    <h4 class="error">
                                        <%= errors.imagen.msg %>
                                    </h4>
                                    <% } %>
                            </div>
                        </div>
                        <div>
                            <label for="">Descripción</label>
                            <input type="text" name="descripcion" id="descripcion" value="<%= sala.descripcion %> ">
                            <div class="descripcion-sala-errors">
                                <% if (locals.errors && descripcion.errors) { %>
                                    <h4 class="error">
                                        <%= errors.descripcion.msg %>
                                    </h4>
                                    <% } %>
                            </div>
                        </div>
                        <button type="submit">Editar</button>
                    </form>
                    <form action="/salas/delete" method="POST" style="display: inline-flex">
                        <button type="submit" class="action-button delete">ELIMINAR</button>
                    </form>
                </div>
                <script src="/scripts/salaValidations.js"></script>

            </main>

            <%- include('../partials/footer') %>

    </body>

</html>